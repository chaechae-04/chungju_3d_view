FROM openjdk:17-jdk-alpine

WORKDIR /app

# Install necessary packages
RUN apk add --no-cache gradle

# Copy gradle files
COPY gradle/ gradle/
COPY gradlew ./
COPY build.gradle ./
COPY settings.gradle ./

# Download dependencies
RUN ./gradlew dependencies

# Copy source code
COPY src/ src/

# Expose port
EXPOSE 8080

# Start Spring Boot application
CMD ["./gradlew", "bootRun"] 